<mvc:View
    controllerName="ui5.cod3rsgrowth.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Shell>
        <SplitApp
            class="cod3rsGrowth"
            id="app"
            busy="{/ocupado}"
            busyIndicatorDelay="{/ocupadoRetardo}"
        >
            <masterPages>
                <Page id="masterPages">
                    <content>
                        <List
                            id="listaLateral"
                            includeItemInSelection="false"
                            mode="None"
                        >
                            <items>
                                <StandardListItem
                                    type="Active"
                                    id="botaoLateralEmpresas"
                                    title="{i18n>botaoLateralEmpresas}"
                                    press=".aoClicarEmpresas"
                                />
                                <StandardListItem
                                    type="Active"
                                    id="botaoLateralEscolas"
                                    title="{i18n>botaoLateralEscolas}"
                                    press=".aoClicarEscolas"
                                />
                            </items>
                        </List>
                    </content>
                </Page>
            </masterPages>
            <detailPages>
                <Page id="detailPages" />
            </detailPages>
        </SplitApp>
    </Shell>
</mvc:View>
