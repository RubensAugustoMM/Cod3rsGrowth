<mvc:View 
    controllerName="ui5.cod3rsgrowth.controller.Lista"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page title="{i18n>detailTitle}" id="lista">
        <content>
            <Table id="tabela" items="{/items}">
                <headerToolbar>
                    <Toolbar>
                       <Title text="{i18n>tituloFiltro}"/>
                       <ToolbarSpacer/>
                       <SearchField 
                          width="50%" 
                          search=".aoFiltrarTabela"/>
                    </Toolbar>
                 </headerToolbar>
                    <columns>
                    </columns>
                    <ColumnListItem>
                    </ColumnListItem>
            </Table>
        </content>
    </Page>
</mvc:View>