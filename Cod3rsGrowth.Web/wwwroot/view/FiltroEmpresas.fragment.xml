<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel id="filtroEmpresasFragment">
        <content>
            <FlexBox
                displayInline="true"
                fitContainer="true"
                renderType="Bare"
                width="100%"
                wrap="Wrap"
            >
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.nome}"
                >
                    <content>
                        <Input
                            id="filtroNomeEmpresa"
                            value="{FiltroEmpresa>/RazaoSocialFiltro}"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.CNPJ}"
                >
                    <content>
                        <Input
                            id="filtroCnpj"
                            value="{FiltroEmpresa>/CnpjFiltro}"
                            valueLiveUpdate="true"
                            type="Number"
                            maxLength="14"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.CapitalSocial}"
                >
                    <content>
                        <Input
                            id="filtroCapitalSocial"
                            value="{FiltroEmpresa>/CapitalSocialFiltro}"
                            type="Number"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>

                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.SituacaoCadastral}"
                >
                    <content>
                        <ComboBox
                            id="filtroSituacaoCadastral"
                            width="100%"
                            selectedKey="{FiltroEmpresa>/SituacaoCadastralFiltro}"
                            items="{path:'habilitado>/Habilitado',
                            sorter: {path: 'Valor'}}"
                        >
                            <c:Item
                                key="{habilitado>Codigo}"
                                text="{habilitado>Valor}"
                            />
                    </ComboBox>
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.DataAbertura}"
                >
                    <content>
                        <DatePicker
                            id="filtroDataAbertura"
                            value="{
                                path: 'FiltroEmpresa>/DataAberturaFiltro',
                            type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            source: {
                                pattern: 'yyyy-MM-ddTHH:mm:ss'
                            }
                        }}"
                            ariaDescribedBy="{i18>CriarEditarEmpresas.dataAbertura}"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.NaturezaJuridica}"
                >
                    <content>
                        <ComboBox
                            id="filtroNaturezaJuridica"
                            width="100%"
                            selectedKey="{FiltroEmpresa>/NaturezaJuridicaFiltro}"
                            items="{ path: 'naturezaJuridica>/NaturezaJuridica',
                                sorter: {path:'Valor'}}"
                        >
                            <c:Item
                                key="{naturezaJuridica>Codigo}"
                                text="{naturezaJuridica>Valor}"
                            />
                    </ComboBox>
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>Filtro.Estado}"
                >
                    <content>
                        <ComboBox
                            id="filtroEstado"
                            width="100%"
                            selectedKey="{FiltroEmpresa>/EstadoFiltro}"
                            items="{path: 'estados>/Estados',
                        sorter: {path:'Valor'}}"
                        >
                            <c:Item
                                key="{estados>Codigo}"
                                text="{estados>Valor}"
                            />
                        </ComboBox>
                    </content>
                </Panel>
                <Panel width="50%" />
                <VBox
                    width="95%"
                    alignItems="End"
                >
                    <Button
                        width="auto"
                        text="{i18n>FiltroEmpresa.Filtrar}"
                        press=".aoPressionarBotaoFiltrarEmpresa"
                    />
                </VBox>
            </FlexBox>
        </content>
    </Panel>
</c:FragmentDefinition>
