<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel id="filtroEmpresasFragment">
        <content>
            <FlexBox
                displayInline="true"
                fitContainer="true"
                renderType="Bare"
                width="100%"
                wrap="Wrap"
            >
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.nome}"
                >
                    <content>
                        <Input
                            id="filtroNomeEmpresa"
                            value="{/nomeEmpresa}"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.CNPJ}"
                >
                    <content>
                        <Input
                            id="filtroCnpj"
                            value="{/cnpjEmpresa}"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.CapitalSocial}"
                >
                    <content>
                        <Input
                            id="filtroCapitalSocial"
                            value="{/capitalSocialEmpresa}"
                            type="Number"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>

                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.SituacaoCadastral}"
                >
                    <content>
                        <Select
                            id="filtroSituacaoCadastral"
                            width="100%"
                            selectedKey="{/situacaoCadastralSelecionada}"
                            items="{path:'habilitado>/Habilitado',
                            sorter: {path: 'Valor'}}"
                        >
                            <c:Item
                                key="{habilitado>Codigo}"
                                text="{habilitado>Valor}"
                            />
                        </Select>
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.DataAbertura}"
                >
                    <content>
                        <DatePicker
                            id="filtroDataAbertura"
                            value="{/dataAbertura}"
                            ariaDescribedBy="Data abertura"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.NaturezaJuridica}"
                >
                    <content>
                        <Select
                            id="filtroNaturezaJuridica"
                            width="100%"
                            selectedKey="{/naturezaJuridicaSelecionada}"
                            items="{ path: 'naturezaJuridica>/NaturezaJuridica',
                                sorter: {path:'Valor'}}"
                        >
                            <c:Item
                                key="{naturezaJuridica>Codigo}"
                                text="{naturezaJuridica>Valor}"
                            />
                        </Select>
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.Estado}"
                >
                    <content>
                        <ComboBox
                            id="filtroEstado"
                            width="100%"
                            selectedKey="{/estadoSelecionado}"
                            items="{path: 'estados>/Estados',
                        sorter: {path:'Valor'}}"
                        >
                            <c:Item
                                key="{estados>Codigo}"
                                text="{estados>Valor}"
                            />
                        </ComboBox>
                    </content>
                </Panel>
                <Panel width="50%" />
                <VBox
                    width="95%"
                    alignItems="End"
                >
                    <Button
                        width="auto"
                        text="{i18n>FiltroEmpresa.Filtrar}"
                        press=".aoPressionarBotaoFiltrar"
                    />
                </VBox>
            </FlexBox>
        </content>
    </Panel>
</c:FragmentDefinition>
