<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Panel id="filtroEmpresasFragment">
        <content>
            <FlexBox
                displayInline="true"
                fitContainer="true"
                renderType="Bare"
                width="100%"
                wrap="Wrap"
            >
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.nome}"
                >
                    <content>
                        <Input
                            name="filtroNomeEmpresa"
                            value="{/nomeEmpresa}"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.CNPJ}"
                >
                    <content>
                        <Input
                            name="filtroCnpj"
                            value="{/cnpjEmpresa}"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.CapitalSocial}"
                >
                    <content>
                        <Input
                            name="filtroCapitalSocial"
                            value="{/capitalSocialEmpresa}"
                            valueLiveUpdate="true"
                            width="100%"
                        />
                    </content>
                </Panel>

                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.SituacaoCadastral}"
                >
                    <content>
                        <ComboBox
                            width="100%"
                            value="{/situacaoCadastral}"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.DataAbertura}"
                >
                    <content>
                        <DatePicker
                            name="DataAbertura"
                            value="{/dataAbertura}"
                            ariaDescribedBy="Data abertura"
                            width="100%"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.NaturezaJuridica}"
                >
                    <content>
                        <ComboBox
                            width="100%"
                            value="{/naturezaJuridica}"
                        />
                    </content>
                </Panel>
                <Panel
                    width="50%"
                    headerText="{i18n>FiltroEmpresa.Estado}"
                >
                    <content>
                        <ComboBox
                            width="100%"
                            value="{/estado}"
                        />
                    </content>
                </Panel>
                <Panel width="50%" />
                <VBox
                    width="95%"
                    alignItems="End"
                >
                    <Button
                        width="auto"
                        text="{i18n>FiltroEmpresa.Filtrar}"
                        press=".aoPressionarBotaoFiltrar"
                    />
                </VBox>
            </FlexBox>
        </content>
    </Panel>
</c:FragmentDefinition>
